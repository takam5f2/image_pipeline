<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- [bfs, li] -->
  <arg name="type" default="bfs" />
  <!-- [0 ~ 5] -->
  <arg name="number" default="0" />
  <!-- [left, right] -->
  <arg name="side" default="left" />

  <!-- BFS -->
  <group if="$(eval &quot;'$(var type)' == 'bfs' &quot;">
    <push-ros-namespace namespace="$(var type)/$(var number)" />
    <include file="$(find-pkg-share camera_calibration)/launch/camera_bfs.launch.xml" />
    <node pkg="camera_calibration" exec="cameracalibrator.py" name="cameracalibrator" output="screen" args="
    --camera_name camera --size 8x6 --square 0.120 --pattern circles --max-chessboard-speed 3.0">
      <remap from="image" to="image_raw" />
    </node>
  </group>

  <!-- LI -->
  <group if="$(eval &quot;'$(var type)' == 'li' &quot;">
    <push-ros-namespace namespace="$(var type)/$(var side)" />
    <include file="$(find-pkg-share camera_calibration)/launch/camera_li.launch.xml" />
    <node pkg="camera_calibration" exec="cameracalibrator.py" name="cameracalibrator" output="screen" args="
      --camera_name camera --size 8x6 --square 0.120 --pattern circles --max-chessboard-speed 6.0">
      <remap from="image" to="image_raw" />
    </node>
  </group>

</launch>
